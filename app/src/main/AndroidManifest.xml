        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".views.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.StarsViewActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".video_player.VideoPlayer"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".views.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".views.CommentActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.ShowGenre"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.ShowListUserRate"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.ShowList_IMDB"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.ShowListTrending"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.ShowListAnimations"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.ShowListSerials"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.PlayMovieActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.SearchActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.ShowList_Movie"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".views.MainActivity"
            android:exported="false"
            android:screenOrientation="locked"></activity>
    </application>

</manifest>