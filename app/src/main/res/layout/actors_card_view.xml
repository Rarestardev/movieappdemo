<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_actors"
    android:layout_width="200dp"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/base_drawer"
    android:layoutDirection="rtl"
    android:layout_margin="10dp"
    app:cardCornerRadius="400dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_superstar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="400dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="18dp"
            android:layout_alignParentEnd="true"
            >
            <ImageView
                android:id="@+id/actors_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_actors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="James Cameron"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:maxLines="2"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/cardView_superstar"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>