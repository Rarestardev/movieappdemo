<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playMovieLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:layoutDirection="rtl"
    android:scrollbars="none"
    tools:context=".views.PlayMovieActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black_light"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/bg_cardView_small"
                    app:cardCornerRadius="400dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_back_24"
                        android:layout_gravity="center|center_vertical"
                        tools:ignore="ContentDescription"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_saved"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/bg_cardView_small"
                    app:cardCornerRadius="400dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    >
                    <ImageView
                        android:id="@+id/icon_saved"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_bookmark_border_24"
                        android:layout_gravity="center|center_vertical"
                        tools:ignore="ContentDescription"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/bg_cardView_small"
                    app:cardCornerRadius="400dp"
                    android:layout_toStartOf="@id/cardView_saved"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_share_24"
                        android:layout_gravity="center|center_vertical"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/black_light"
            >
            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <androidx.cardview.widget.CardView
                android:id="@+id/play_trailer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                app:cardCornerRadius="400dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_play_arrow_24"
                    android:background="@color/bg_btnPlayTrailer"
                    android:padding="4dp"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/play_trailer"
                android:background="@color/black"
                android:padding="4dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="@string/playTrailer"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view"
            android:layout_below="@id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                >
                <ImageView
                    android:id="@+id/movie_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:id="@+id/imdb"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    tools:text="8.7/10"
                    android:background="@color/imdb_color"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_status"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/card"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="50dp"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/base_drawer"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/baseline_info_24"
                        app:tint="@color/white"
                        tools:ignore="ContentDescription"
                        />
                    <TextView
                        android:id="@+id/textView_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="وضعیت"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="8dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="نام فیلم"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layoutDirection="rtl"
                android:layout_toEndOf="@id/card"
                />
            <TextView
                android:id="@+id/view_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genre"
                android:layout_below="@id/name"
                android:layout_toEndOf="@id/card"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/view_genre"
                android:layout_below="@id/name"
                android:layout_marginTop="6dp"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                tools:text="اکشن . فانتزی"
                />
            <TextView
                android:id="@+id/view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:layout_toEndOf="@id/card"
                android:layout_below="@id/view_genre"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2h 59m"
                android:layout_below="@id/view_genre"
                android:layout_toEndOf="@id/view_time"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/textView_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/director"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/card"
                android:layout_below="@id/view_time"
                />
            <TextView
                android:id="@+id/director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="James Cameron"
                android:layout_toEndOf="@id/textView_director"
                android:layout_below="@id/time"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textAlignment="viewStart"
                />
            <TextView
                android:id="@+id/view_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:layout_below="@id/textView_director"
                android:layout_toEndOf="@id/card"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="14-"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/view_age"
                android:layout_below="@id/director"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/view_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_below="@id/view_age"
                android:layout_toEndOf="@id/card"
                android:layout_marginStart="10dp"
                android:layout_marginTop="11dp"
                />
            <TextView
                android:id="@+id/user_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/age"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/view_rate"
                tools:text="4.4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_below="@id/view_rate"
                android:layout_toEndOf="@id/card"
                android:layout_marginStart="10dp"
                android:layout_marginTop="11dp"
                />
            <TextView
                android:id="@+id/textView_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_rate"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/view_rate"
                tools:text="آمریکا"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/CardView_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_play"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/bg_btnPlay"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="400dp"
                >
                <ImageView
                    android:id="@+id/icon_play"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_play_arrow_24"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="25dp"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_play"
                    android:layout_below="@+id/icon_play"
                    android:textSize="18sp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_download"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/bg_btnDownload"
                app:cardCornerRadius="400dp"
                android:layout_toStartOf="@+id/cardView_play"
                android:layout_marginEnd="20dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_download_24"
                    android:layout_gravity="center_vertical|center"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_like"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/bg_btnDownload"
                app:cardCornerRadius="400dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/cardView_download"
                >
                <ImageView
                    android:id="@+id/icon_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_favorite_border_24"
                    android:layout_gravity="center|center_vertical"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_comment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/bg_btnDownload"
                app:cardCornerRadius="400dp"
                android:layout_toStartOf="@+id/cardView_like"
                android:layout_marginEnd="20dp"
                >
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/baseline_add_comment_24"
                    android:layout_gravity="center|center_vertical"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_actors"
            android:layout_below="@id/CardView_layout"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLines="8"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/superstars"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_actors"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                tools:itemCount="6"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/items_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_actors"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/items"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/items_view"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                tools:itemCount="2"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/textView_moreComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_more"
            android:layout_below="@id/layout_comments"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/textView_moreComment"
            />
    </RelativeLayout>
</ScrollView>