<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        />
    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/video_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_back_24"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/video_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>
            <ImageView
                android:id="@+id/video_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/more"
                android:layout_marginEnd="8dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/menu_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/toolbar"
            android:layoutDirection="ltr"
            android:layout_marginTop="8dp"
            android:background="@color/black_light"
            >
            <ImageView
                android:id="@+id/ic_mute"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_volume_down_24"
                android:layout_marginStart="10dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/text_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mute"
                android:layout_below="@id/ic_mute"
                android:layout_marginStart="12dp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                />
            <ImageView
                android:id="@+id/ic_night"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_nights_stay_24"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/ic_mute"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/text_nightMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nightMode"
                android:layout_below="@id/ic_night"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/ic_mute"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                />
            <ImageView
                android:id="@+id/ic_vol"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_volume_up_24"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/ic_night"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vol_up"
                android:layout_below="@id/ic_vol"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/ic_night"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                />
            <ImageView
                android:id="@+id/ic_playSpeed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_speed_24"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/ic_vol"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_speed"
                android:layout_below="@id/ic_playSpeed"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/ic_vol"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
            <ImageView
                android:id="@+id/ic_brightness"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_brightness_high_24"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@id/ic_playSpeed"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brightness"
                android:layout_below="@id/ic_playSpeed"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@id/ic_playSpeed"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
            <ImageView
                android:id="@+id/ic_EQ"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_equalizer_24"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@id/ic_brightness"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/EQ"
                android:layout_below="@id/ic_playSpeed"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@id/ic_brightness"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>

        <include layout="@layout/swipe_zoom_design"/>

        <RelativeLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_above="@+id/bottom_icons"
            >
            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                tools:text="5555"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                tools:text="4444"
                android:textColor="@color/white"
                />

            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@+id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/exo_position"
                android:layout_toEndOf="@id/exo_duration"
                app:played_color="@color/bg_btnPlay"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_icons"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginBottom="10dp"
            android:layoutDirection="ltr"
            >
            <ImageView
                android:id="@+id/unlock"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_lock_open_24"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/exo_rew"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_replay_10_24"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/exo_play"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_play_arrow_24"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/exo_pause"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_pause_24"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/exo_ffwd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/round_forward_10_24"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/scaling"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/fullscreen"
                tools:ignore="ContentDescription" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/void_view_Id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_items"
            android:layout_above="@+id/progress"
            android:layout_marginBottom="20dp"
            android:focusable="false"
            >
            <RelativeLayout
                android:id="@+id/indicatorView"
                style="@style/VideoPlayerIndicator"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/indicatorImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    tools:background="@drawable/baseline_brightness_high_24"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/indicatorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:text="12:38"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/lock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_lock_24"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:layout_marginStart="10dp"
        android:background="@drawable/ripple_bg"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</RelativeLayout>