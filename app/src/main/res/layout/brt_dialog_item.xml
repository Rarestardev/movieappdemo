<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_color"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layoutDirection="rtl"
    >
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brightness"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap"/>
        <ImageView
            android:id="@+id/brt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layoutDirection="ltr"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_close_24"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layoutDirection="ltr"
        >
        <ImageView
            android:id="@+id/brt_dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_brightness_high_24"
            android:layoutDirection="ltr"
            tools:ignore="ContentDescription"
            android:layout_centerVertical="true"
            />
        <SeekBar
            android:id="@+id/brt_SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="10"
            android:layout_toEndOf="@id/brt_dialog_icon"
            android:layout_toStartOf="@id/brt_number"
            />
        <TextView
            android:id="@+id/brt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="100"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>