<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:layoutDirection="rtl"
    android:background="@color/base_color"
    android:scrollbars="none"
    tools:context=".fragments.Home_fragment"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            />
        <RelativeLayout
            android:id="@+id/trending_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/viewpager2"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
            />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_trending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:visibility="gone"
                />
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewpager2"
                />
            <LinearLayout
                android:layout_below="@+id/page"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_centerInParent="true"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_Movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trending_layout"
            android:layout_marginTop="15dp"
            >
        <TextView
            android:id="@+id/view_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/title_view_movie_mainActivity"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_movie"
                android:layout_below="@id/view_movie"
                android:layout_width="match_parent"
                android:minHeight="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:scrollbars="none"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                />
            <TextView
                android:id="@+id/more1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_more"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_Serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_Movie"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/view_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/title_view_serial_mainActivity"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="180dp"
                android:layout_below="@id/view_serial"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:scrollbars="none"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                />
            <TextView
                android:id="@+id/more2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_more"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_Animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_Serial"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/view_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/title_view_animation_mainActivity"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@id/view_animation"
                android:layout_marginTop="8dp"
                android:scrollbars="none"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                />
            <TextView
                android:id="@+id/more3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_more"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_Trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_Animation"
            android:layout_marginTop="8dp"
            >
        <TextView
            android:id="@+id/view_trending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/title_view_new_mainActivity"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_updateSerial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:minHeight="180dp"
            android:layout_below="@id/view_trending"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            />
            <TextView
                android:id="@+id/more4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_more"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_UserRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_Trending"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/view_userRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/userRate"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_userRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:minHeight="180dp"
                android:layout_below="@id/view_userRate"
                android:layout_marginTop="8dp"
                android:scrollbars="none"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                />
            <TextView
                android:id="@+id/more5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_more"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/view_UserRate"
            />
    </RelativeLayout>
</ScrollView>